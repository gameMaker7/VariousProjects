import java.util.Scanner;


public class Solution {

	static Scanner input = new Scanner(System.in);
	public static void main(String[] args) {
		System.out.println("# of Stars");
		int stars = input.nextInt();
		int total = stars;
		stars = 0;
		int rows = 1;
		int rowN = 0;
		int col = 0;
		while(stars != total){
			col++;
			if(stars == total){
				System.out.println(col + "," + rowN);
				break;
				}
			rowN++;
			if(rowN%2 == 0){
				rows = 2;
			}else{
				rows=col;
			}
			stars += rows;
			if(stars == total){
				System.out.println(col + "," + rowN);
				break;
				}
			if(stars>total){
				rowN--;
			}
		}
	}
}
